{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-1/2 mx-auto pt-8">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="flex pb-4">
                    <h2 class="flex-1 text-xl font-semibold">Consumpties</h2>
                </div>
                {# TODO fix below #}
                <div class="flex py-8">
                    <div class>
                        <a href="{{ path('app_consumption_index') }}"
                           class="btn bg-gray-500 hover:bg-green-700 text-white py-2 px-4 rounded-l">
                            Alles
                        </a>
                    </div>
                    <div class>
                        <a href="{{ path('app_consumption_taken') }}"
                           class="btn bg-green-500 hover:bg-green-700 text-white py-2 px-4">
                            Ingenomen
                        </a>
                    </div>
                    <div>
                        <a href="{{ path('app_consumption_forgotten') }}"
                           class="btn bg-gray-500 hover:bg-green-700 text-white py-2 px-4 rounded-r">
                            Niet Ingenomen
                        </a>
                    </div>
                </div>
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Datum
                            </th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Ingenomen
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for consumption in consumptions %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ consumption.dateTime|date("d-m-Y H:i") }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% if consumption.taken %}
                                        <span class="bg-green-500 px-4 py-1 rounded text-white">
                                            {{ consumption.taken|boolean_readable }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation flex justify-end pt-4">
                    {{ knp_pagination_render(consumptions) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}