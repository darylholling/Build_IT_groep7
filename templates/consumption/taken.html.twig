{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-1/2 mx-auto pt-8">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="flex pb-4">
                    <h2 class="flex-1 text-xl font-semibold">Consumpties</h2>
                </div>
                <div class="flex py-8">
                    <div class>
                        <a href="{{ path('app_consumption_index') }}"
                           class="btn bg-gray-500 hover:bg-green-700 text-white py-2 px-4 rounded-l">
                            Alles
                        </a>
                    </div>
                    <div class>
                        <a href="{{ path('app_consumption_taken') }}"
                           class="btn bg-green-500 hover:bg-green-700 text-white py-2 px-4">
                            Ingenomen
                        </a>
                    </div>
                    <div>
                        <a href="{{ path('app_consumption_forgotten') }}"
                           class="btn bg-gray-500 hover:bg-green-700 text-white py-2 px-4 rounded-r">
                            Niet Ingenomen
                        </a>
                    </div>
                </div>
                {% include 'consumption/partial/consumptionstable.html.twig' %}
                <div class="navigation flex justify-end pt-4">
                    {{ knp_pagination_render(consumptions) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}