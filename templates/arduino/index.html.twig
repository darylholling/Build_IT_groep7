{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-1/2 mx-auto pt-8">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="flex">
                    <h2 class="flex-1 text-xl font-semibold">Actieve arduino's</h2>
                    {% if app.user.activeArduino == null %}
                        <div class="ml-auto">
                            <a href="{{ path('app_arduino_new') }}"
                               class="btn bg-green-500 text-white py-2 px-4 rounded">
                                <i class="fas fa-plus mr-2"></i>Arduino toevoegen
                            </a>
                        </div>
                    {% endif %}
                </div>
                <div class="flex py-8">
                    <div class>
                        <a href="{{ path('app_arduino_index') }}"
                           class="btn bg-green-500 hover:bg-green-700 text-white py-2 px-4 rounded-l">
                            Actief
                        </a>
                    </div>
                    <div>
                        <a href="{{ path('app_arduino_listinactive') }}"
                           class="btn bg-gray-500 hover:bg-red-500 text-white py-2 px-4 rounded-r">
                            Inactief
                        </a>
                    </div>
                </div>
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Url
                            </th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                &nbsp;
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        <tr>
                            {% if arduino %}
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ arduino.url }}
                                </td>
                                <td>
                                    <div class="flex justify-end">
                                        <a href="{{ path('app_arduino_edit', {
                                            arduino: arduino.id
                                        }) }}" class="mr-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_arduino_deactivate', {
                                            arduino: arduino.id
                                        }) }}" class="mr-2" onclick="return confirm('Wilt u de arduino echt deactiveren?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            {% else %}
                                <td>
                                    <i class="mt-6 text-center text-2xl font-extrabold text-gray-900">Er is geen Arduino ingesteld.</i>
                                </td>
                            {% endif %}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}