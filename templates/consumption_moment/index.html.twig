{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-1/2 mx-auto pt-8">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="flex pb-4">
                    <h2 class="flex-1 text-xl font-semibold">Consumptie momenten</h2>
                    <div class="ml-auto">
                        <a href="{{ path('app_consumptionmoment_new') }}" class="btn bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded">
                            <i class="fas fa-plus mr-2"></i>Consumptiemoment toevoegen
                        </a>
                    </div>
                </div>
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Gebruiker
                            </th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Tijd
                            </th>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                &nbsp;
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for consumptionMoment in consumptionMoments %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ consumptionMoment.user.email }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ consumptionMoment.dateTime|date("H:i") }}
                                </td>
                                <td>
                                    <div class="flex justify-end">
                                        <a href="{{ path('app_consumptionmoment_edit', {
                                            consumptionMoment: consumptionMoment.id
                                        }) }}" class="mr-2">
                                            <i class="fas fa-edit hover:text-green-500"></i>
                                        </a>
                                        <a href="{{ path('app_consumptionmoment_delete', {
                                            consumptionMoment: consumptionMoment.id
                                        }) }}" class="mr-2">
                                            <i class="fas fa-trash hover:text-red-500"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}