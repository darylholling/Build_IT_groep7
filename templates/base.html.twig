<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Build_IT{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {% block head_javascripts %}{% endblock %}

    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

</head>
<body>
{#{% if app.user %}#}
    <nav class="bg-gray-800">
        <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
            <div class="relative flex items-center justify-between h-16">
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    <button class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                            aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>

                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                    <div class="hidden sm:block sm:ml-6">
                        <div class="flex space-x-4">
                            <div class="flex-shrink-0 flex items-center">
                                <img class="block lg:hidden h-8 w-auto"
                                     src="https://i.pinimg.com/originals/59/c3/a6/59c3a69a8401dd372cdb8b0db2100678.png" alt="Workflow">
                                <img class="hidden lg:block h-8 w-auto"
                                     src="https://i.pinimg.com/originals/59/c3/a6/59c3a69a8401dd372cdb8b0db2100678.png"
                                     alt="Workflow">
                                <h2 class="text-3xl font-extrabold text-white">&nbsp; Build IT</h2>
                            </div>
                            <a href="{{ path('app_home_index') }}"
                               class="bg-green-500 text-white px-3 py-2 rounded-md text-sm font-medium">
                                Dashboard
                            </a>

                            <a href="{{ path('app_contact_index') }}"
                               class="text-gray-300 hover:bg-green-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                                Contacten
                            </a>
                            <a href="{{ path('app_consumptionmoment_index') }}"
                               class="text-gray-300 hover:bg-green-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                                Consumptie momenten
                            </a>
                            <a href="{{ path('app_ardiuno_index') }}"
                               class="text-gray-300 hover:bg-green-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                                Ardiuno
                            </a>
                            <a href="{{ path('app_consumption_index') }}"
                               class="text-gray-300 hover:bg-green-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                                Consumpties
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hidden sm:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="#"
                   class="bg-gray-900 text-white block px-3 py-2 rounded-md text-base font-medium">Dashboard</a>
                {% if app.user %}
                    <a href="{{ path('app_contact_index') }}"
                       class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                        Contacten
                    </a>
                    <a href="{{ path('app_consumptionmoment_index') }}"
                       class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                        Consumptie momenten
                    </a>
                    <a href="{{ path('app_ardiuno_index') }}"
                       class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                        Ardiuno
                    </a>
                    <a href="{{ path('app_consumption_index') }}"
                       class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                        Consumpties
                    </a>
                {% endif %}
            </div>
        </div>
    </nav>
{#{% endif %}#}

{% if form is defined %}
    {% form_theme form 'form/theme.html.twig' %}
{% endif %}
{% block body %}

{% endblock %}


{% block javascripts %}{% endblock %}
</body>
</html>
